#!/bin/bash

#Configure workdir

mpcdn_2220="https://k7pwlkluddiqdy0.gitee.io/mp3220"

#start
function kangle_main(){
    wget -q ${mpcdn_2220}/opt/kangle/conf/kangle_install_ver -O kangle_install_ver
    wget -q ${mpcdn_2220}/opt/kangle/script/kangle_main.sh -O kangle_main.sh
    sh kangle_main.sh | tee kangle_main.log
}

function kangle_install_url_coding(){
	wget -q ${mpcdn_2220}/opt/kangle/conf/kangle_install_url_coding -O kangle_install_url
	kangle_main
}

function kangle_install_url_fastgit(){
	wget -q ${mpcdn_2220}/opt/kangle/conf/kangle_install_url_fastgit -O kangle_install_url
	kangle_main
}

function kangle_install_url_github(){
	wget -q ${mpcdn_2220}/opt/kangle/conf/kangle_install_url_github -O kangle_install_url
	kangle_main
}

function kangle_install_url_gitlab(){
	wget -q ${mpcdn_2220}/opt/kangle/conf/kangle_install_url_gitlab -O kangle_install_url
	kangle_main
}

function kangle_install_url_bitbucket(){
	wget -q ${mpcdn_2220}/opt/kangle/conf/kangle_install_url_bitbucket -O kangle_install_url
	kangle_main
}

function Start(){
	echo -e "———————————————————————————
	\033[1mＫＡＮＧＬＥＳＯＦＴ\033[0m
	\033[32mMysql配置文件(my.cnf)选择\033[0m
	1. ◎ 国内优先coding（默认）
	2. ◎ 国内一般fastgit
	3. ◎ 国外优先github
	4. ◎ 国外优先gitlab
	5. ◎ 国外优先bitbucket
	0. ◎ 
	0. ◎ 
	0. ◎ 
	0. ◎ 退出安装"
	read -p "请输入序号并回车,或按回车使用默认设置:" YORN
	if [ "$YORN" = "0" ]; then
        exit 0;
	elif [ "$YORN" = "1" ]; then
		kangle_install_url_coding
	elif [ "$YORN" = "2" ]; then
		kangle_install_url_fastgit
	elif [ "$YORN" = "3" ]; then
		kangle_install_url_github
	elif [ "$YORN" = "4" ]; then
		kangle_install_url_gitlab
	elif [ "$YORN" = "5" ]; then
		kangle_install_url_bitbucket
	else
		kangle_install_url_coding
	fi
}

Start
